{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "packages/**/*",
    "integration/**/*",
    "./core/",
    "./common/",
    "./adapters/",
    "./decorators/",
    "./project-view/",
    "./platform-express/",
    "./index.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}